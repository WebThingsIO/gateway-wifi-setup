<html>
  <head>
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1"/>
    <meta charset="utf-8"/>
    <style>
        body {
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
          background-color: #305067;
          color: #fff;
          font-size: 100%;
        }
        
        @media (max-width:450px) {
          body {
            font-size: 80%;
          }
        }
        
        h1, h2, p, button, select, input, table {
          display: block;
          width: 90%;
          max-width: 450px;
          margin: 0 auto;
        }
        
        h1 {
          font-size: 4em;
          margin-top: 1.5em;
          margin-bottom: 1em;
        }
        
        p {
          font-size: 1.5em;
          margin: 1em auto;
        }
        
        button {
          margin: 2em auto;
          font-family: inherit;
          font-size: 2em;
          font-weight: bold;
          color: #eee;
          background-color: #333;
          border: none;
          padding: 0.3em 1em;
          border-radius: 2px;
        }
        
        button:active {
          background-color: #666;
        }
        
        select, input {
          margin: 1em auto;
          font-size: 1.5em;
          font-family: inherit;
          border: 2px solid #333;
          border-radius: 2px;
          padding: 0.3em;
        }
        
        table {
          margin: 1em auto;
          font-size: 1.5em;
        }
        
        th {
          text-align: left;
          min-width: 50%
        }
        
        td {
          text-align: right;
          vertical-align: bottom;
        }
        
        td, th {
          border-bottom: 2px solid #333;
          padding: 0.3em 0;
        }

        #step2 {
            display: none;
        }
    </style>
    <script>
          function selectssid(event){
              document.getElementById('step1').style.display = 'none';
              document.getElementById('step2').style.display = 'block';
              document.getElementById('selected-network').innerText = event.value;
          }

          function back(event){
              document.getElementById('step1').style.display = 'block';
              document.getElementById('step2').style.display = 'none';
              event.preventDefault();
          }

    </script>
    <title>Mozilla Gateway</title>
  </head>
  <body>
    <form action="/connecting" method="post">
        <div id="step1">
            <h1>Welcome</h1>
            <h2>Connect to a WiFi network?</h2>
            <select onchange="selectssid(this)" id="ssid" name="ssid"
                    size="5">
                {{#networks}}
                <option value="{{this1}}">{{this}}</option>
                <option value="{{this2}}">{{this}}</option>
                {{/networks}}
            </select>
            <input type="submit" id="skip" name="skip" value="Skip"/>
        </div>
        <div id="step2">
            <h3 id="selected-network">{selected network}</h3>
            <input name="password" placeholder="WiFi Password" style="margin-top: 1em">
            <input id="showpassword" type="checkbox">
            <label for="showpassword">Show password</label>
            <button id="submit">Connect</button>
            <button onclick="back(event)" >Back</button>
        </div>
    </form>
  </body>
</html>